@model IEnumerable<CS2AKeanaConsebido_MVCPROJECT.BusLogic.Model.tblStudent>
<div>
    <h2>Student List</h2>
    <a class="btn btn-primary m-2" href="/Student/AddNewStudent"> Add New Student</a>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Age</td>
                <td>@student.Course</td>
                <td><a class="btn btn-sm btn-warning" href="/Student/EditStudent/@student.id"> Edit</a></td>
            </tr>
        }
    </table>
</div>
